pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building Docker image...'
                    dockerImage = docker.build("my-node-app:latest")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running tests inside Docker container...'
                    dockerImage.inside {
                        sh 'npm install'  // Inside container is Linux, so sh works
                        sh 'npm test'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Docker container...'
                bat 'docker run -d -p 3001:3001 my-node-app:latest' // Outside container, on Windows agent use bat
            }
        }
    }
}
